@model List<Pedido>

@{
    ViewData["Title"] = "Pedidos";
    ViewData["SubTitle"] = "Listado";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">
    @ViewData["Title"]
    <small class="text-muted fs-5">@ViewData["SubTitle"]</small>
</h2>

<div class="row small mb-3">
    <div class="col text-end">
        Mostrando @(Model?.Count ?? 0) elementos
    </div>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered small">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].Id)</th>
                    <th>@Html.DisplayNameFor(model => model[0].UsuarioId)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Estado)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Total)</th>
                    <th>@Html.DisplayNameFor(model => model[0].DireccionEnvio)</th>
                    <th>@Html.DisplayNameFor(model => model[0].MetodoPago)</th>
                    <th>@Html.DisplayNameFor(model => model[0].EsCarrito)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Total)</td>
                        <td>@Html.DisplayFor(modelItem => item.DireccionEnvio)</td>
                        <td>@Html.DisplayFor(modelItem => item.MetodoPago)</td>
                        <td>
                            @(item.EsCarrito ? "SÃ­" : "No")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No hay pedidos para mostrar.</div>
}